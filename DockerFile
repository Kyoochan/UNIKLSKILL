# Base image: PHP 8.2 with Apache
FROM php:8.2-apache

# --------------------------
# 1Ô∏è‚É£ Install system dependencies
# --------------------------
RUN apt-get update && apt-get install -y \
    libzip-dev zip libonig-dev libxml2-dev unzip git curl \
    && rm -rf /var/lib/apt/lists/*

# --------------------------
# 2Ô∏è‚É£ Enable Apache modules
# --------------------------
RUN a2enmod rewrite

# --------------------------
# 3Ô∏è‚É£ Install PHP extensions
# --------------------------
RUN docker-php-ext-install mbstring bcmath xml pdo_mysql zip

# --------------------------
# 4Ô∏è‚É£ Install Node.js & npm
# --------------------------
RUN curl -fsSL https://deb.nodesource.com/setup_20.x | bash - \
    && apt-get install -y nodejs \
    && rm -rf /var/lib/apt/lists/*

# --------------------------
# 5Ô∏è‚É£ Set Apache document root
# --------------------------
ENV APACHE_DOCUMENT_ROOT=/var/www/html/public
RUN sed -ri -e 's!/var/www/html!${APACHE_DOCUMENT_ROOT}!g' /etc/apache2/sites-available/*.conf \
    && sed -ri -e 's!/var/www/!${APACHE_DOCUMENT_ROOT}!g' /etc/apache2/apache2.conf /etc/apache2/conf-available/*.conf

# --------------------------
# 6Ô∏è‚É£ Set working directory
# --------------------------
WORKDIR /var/www/html

# --------------------------
# 7Ô∏è‚É£ Copy application code
# --------------------------
COPY . .

# --------------------------
# 8Ô∏è‚É£ Install Composer
# --------------------------
RUN curl -sS https://getcomposer.org/installer | php -- --install-dir=/usr/local/bin --filename=composer

# --------------------------
# 9Ô∏è‚É£ Install PHP dependencies
# --------------------------
RUN composer install --no-interaction --prefer-dist --optimize-autoloader

# --------------------------
# üîü Install npm dependencies & build assets
# --------------------------
RUN npm install
RUN npm run build

# --------------------------
# 1Ô∏è‚É£1Ô∏è‚É£ Set permissions
# --------------------------
RUN chown -R www-data:www-data /var/www/html/storage /var/www/html/bootstrap/cache

# --------------------------
# 1Ô∏è‚É£2Ô∏è‚É£ Expose port 80 for Apache
# --------------------------
EXPOSE 80

# --------------------------
# 1Ô∏è‚É£3Ô∏è‚É£ Start Apache in foreground
# --------------------------
CMD ["apache2-foreground"]
